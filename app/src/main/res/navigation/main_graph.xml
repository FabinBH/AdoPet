<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.projetopi.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authentication"
            app:destination="@id/authentication"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <navigation android:id="@+id/authentication"
        app:startDestination="@id/dashboardFragment">
        <fragment
            android:id="@+id/dashboardFragment"
            android:name="com.example.projetopi.ui.DashboardFragment"
            android:label="DashboardFragment"
            tools:layout="@layout/fragment_dashboard">
            <action
                android:id="@+id/action_dashboardFragment_to_loginFragment3"
                app:destination="@id/loginFragment3" />
            <action
                android:id="@+id/action_dashboardFragment_to_signupFragment2"
                app:destination="@id/signupFragment2" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment3"
            android:name="com.example.projetopi.ui.auth.LoginFragment"
            android:label="LoginFragment"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment3_to_recoverPasswordFragment"
                app:destination="@id/recoverPasswordFragment" />
        </fragment>
        <fragment
            android:id="@+id/signupFragment2"
            android:name="com.example.projetopi.ui.auth.SignupFragment"
            android:label="SignupFragment"
            tools:layout="@layout/fragment_signup"/>
        <action
            android:id="@+id/action_global_adoptionFragment"
            app:destination="@id/adoptionFragment" />
        <fragment
            android:id="@+id/recoverPasswordFragment"
            android:name="com.example.projetopi.ui.RecoverPasswordFragment"
            android:label="RecoverPasswordFragment"
            tools:layout="@layout/fragment_recover_password"/>
    </navigation>
    <fragment
        android:id="@+id/adoptionFragment"
        android:name="com.example.projetopi.ui.AdoptionFragment"
        android:label="AdoptionFragment"
        tools:layout="@layout/fragment_adoption">
        <action
            android:id="@+id/action_adoptionFragment_to_adoptionConfirmationFragment"
            app:destination="@id/adoptionConfirmationFragment" />
        <action
            android:id="@+id/action_adoptionFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_adoptionFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/adoptionConfirmationFragment"
        android:name="com.example.projetopi.ui.AdoptionConfirmationFragment"
        android:label="AdoptionConfirmationFragment"
        tools:layout="@layout/fragment_adoption_confirmation"/>
    <fragment
        android:id="@+id/ongFragment"
        android:name="com.example.projetopi.ui.OngFragment"
        android:label="OngFragment"
        tools:layout="@layout/fragment_ong">
        <action
            android:id="@+id/action_ongFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/animalRegisterFragment"
        android:name="com.example.projetopi.ui.AnimalRegisterFragment"
        android:label="AnimalRegisterFragment"
        tools:layout="@layout/fragment_animal_register"/>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.projetopi.ui.util.FilterFragment"
        android:label="FilterFragment"
        tools:layout="@layout/fragment_filter"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.projetopi.ui.auth.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_animalRegisterFragment"
            app:destination="@id/animalRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.projetopi.ui.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.projetopi.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/socialFragment"
        android:name="com.example.projetopi.ui.SocialFragment"
        android:label="fragment_social"
        tools:layout="@layout/fragment_social" />
</navigation>